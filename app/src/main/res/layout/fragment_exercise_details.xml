<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_green">

    <TextView
        android:id="@+id/txtChosenExercise"
        android:layout_width="273dp"
        android:layout_height="85dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:textColor="@color/midnight_blue"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgChosenExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtSelectedExerciseMuscleGroup" />

    <TextView
        android:id="@+id/txtExerciseVideoURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:background="@drawable/custom_border"
        android:clickable="true"
        android:gravity="center"
        android:textColor="@color/midnight_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/txtSelectedExerciseMuscleGroup"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:textColor="@color/midnight_blue"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/txtChosenExercise"
        app:layout_constraintTop_toBottomOf="@+id/txtChosenExercise" />

    <TextView
        android:id="@+id/txtExplanation"
        android:layout_width="344dp"
        android:layout_height="449dp"
        android:gravity="center"
        android:scrollbars="vertical"
        android:textColor="@color/midnight_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgChosenExercise" />

</androidx.constraintlayout.widget.ConstraintLayout>