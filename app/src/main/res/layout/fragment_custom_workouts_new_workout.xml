<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_green">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvwExcercises"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/custom_border"
        android:backgroundTint="@color/blue_green"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/workoutTitle" />

    <EditText
        android:id="@+id/workoutTitle"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="Workout Title?"
        android:inputType="textPersonName"
        android:textColor="@color/text"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/rvwExcercises"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addExcercise"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/afronding_xml"
        android:foreground="@android:drawable/ic_menu_add"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/workoutTitle"
        app:layout_constraintEnd_toEndOf="@+id/rvwExcercises"
        app:layout_constraintTop_toTopOf="@+id/workoutTitle" />

    <Button
        android:id="@+id/saveWorkout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/afronding_xml"
        android:text="Save Workout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvwExcercises" />

    <EditText
        android:id="@+id/excerciseFilter"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Search Excercises"
        android:inputType="textPersonName"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/rvwExcercises"
        app:layout_constraintStart_toStartOf="@+id/rvwExcercises" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Add Excercises"
        app:layout_constraintEnd_toEndOf="@+id/addExcercise"
        app:layout_constraintStart_toStartOf="@+id/addExcercise"
        app:layout_constraintTop_toBottomOf="@+id/addExcercise" />

</androidx.constraintlayout.widget.ConstraintLayout>