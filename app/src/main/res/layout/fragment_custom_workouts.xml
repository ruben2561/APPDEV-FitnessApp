<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_green"
    tools:context=".Workouts.customWorkouts.CustomWorkoutsFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvwWorkouts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_border"
        android:backgroundTint="@color/midnight_blue"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/newWorkoutButton"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginEnd="5dp"
        android:background="@color/transparant"
        android:backgroundTint="@color/transparant"
        android:gravity="center"
        android:scaleX="3"
        android:scaleY="3"
        android:text="+"
        android:textColor="@color/baby_blue"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/rvwWorkouts"
        app:layout_constraintEnd_toEndOf="@+id/rvwWorkouts"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:text="Custom Workouts"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rvwWorkouts"
        app:layout_constraintStart_toStartOf="@+id/rvwWorkouts"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>